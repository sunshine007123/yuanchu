<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
	"-//Apache Software Foundation//DTD Struts Configuration 2.3//EN"
	"http://struts.apache.org/dtds/struts-2.3.dtd">

<struts>
	<!-- 开启开发者模式，作用，页面中报错信息会更加详细，默认false -->
	<constant name="struts.devMode" value="true" />
	<!-- 指定由spring负责action对象的创建（必选） -->
	<constant name="struts.objectFactory" value="spring" />
	<!-- 国际化设置，请求参数为utf-8编码（必选） -->
	<constant name="struts.i18n.encoding" value="UTF-8" />
	<!-- 指定被struts2处理的请求后缀类型，如果有多个，用逗号隔开 -->
	<constant name="struts.action.extension" value="do,action,," />
	
	<include file="struts_news.xml"></include>
	<include file="struts_login.xml"></include>
	<include file="struts_test.xml"></include>
	<include file="struts_course.xml"></include>
	<include file="struts_student.xml"></include>
	
</struts>